@model GestionRestau.ViewModels.TableCmdViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TableCmd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbPlace" class="control-label"></label>
                <input asp-for="NbPlace" class="form-control" />
                <span asp-validation-for="NbPlace" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Occupation" /> @Html.DisplayNameFor(model => model.Occupation)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Emplacement" class="control-label"></label>
                <input asp-for="Emplacement" class="form-control" />
                <span asp-validation-for="Emplacement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServeurId" class="control-label"></label>
                <select asp-for="ServeurId" class="form-control" asp-items="Model.Serveurs"></select>
                <span asp-validation-for="ServeurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
